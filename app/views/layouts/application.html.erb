<!DOCTYPE html>
<html>
<head>
  <title>Movies</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container bs-docs-container">
    <article>
      <header>
        <div class="page-header">
          <h1>Movies Barcelona <small>The best movies Titles</small></h1>
        </div>
      </header>
    </article>  
    <!-- bootstrap -->
    <nav class="navbar navbar-inverse" role="navigation">
      <div class="container-fluid">
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Index', root_path %></li>
            <li><%= link_to 'Movies', posts_path %></li>
            <% if current_user %>
              <li><%= link_to 'New Movie', new_post_path %></li>
              <li><%= link_to 'logout=> '+current_user.email, logout_path %></li>
              <li><%= link_to 'Edit user', edit_user_path(current_user) %></li>
            <% else %>
              <li><%= link_to "Sign Up", new_user_path %></li>
              <li><%= link_to 'Sign In', login_path %></li>
            <%end%>  
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
    <br>
    <footer>
      <div class="navbar navbar-inverse">
        <div class="panel-footer">Posted by: Julian Diaz</div>
      </div>
    </footer>
  </div>
</body>
</html>

