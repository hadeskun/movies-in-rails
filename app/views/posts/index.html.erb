<div class="container">
  <h1>Listing movies</h1>
  <br>	
  <div class="row" id='post'>
  	<div class="col-md-9" role="main">
      <div class="row show-grid">
        <% @posts.each do |post| %>
          <div class='col-xs-6 col-md-3'>
            <div class="thumbnail">	
        	    <% if post.has_photo? %>
        	      <%= image_tag post.photo_path %>
        	    <% end%>
        	    <div class='caption'>
        	      <p><%= link_to post.titulo, post %></p>
                <p><%= link_to "Update",edit_post_path(post), class: "btn btn-primary"%> <%= link_to "Delete",post, method: :delete, class: "btn btn-default", data: {:confirm => 'Are you sure?'} %> <!-- link_to con multiples opciones OJO-->
                </p> 
        	    </div>
        	  </div>      
          </div>
        <%end%>
      </div>  
    </div>    
  </div>
</div>
<br />

